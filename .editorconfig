root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
charset = utf-8
indent_style = tab

[*.{bash,sh}]
indent_style = space

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2
charset = utf-8

[*.json]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2
